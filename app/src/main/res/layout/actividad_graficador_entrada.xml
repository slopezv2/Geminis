<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eafit.geminis.actividades.utilidades.GraficadorEntradaActividad"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entrada_graficador_layout"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/pista_funcion_f"
            android:layout_margin="@dimen/margen_abajo_entrada"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pista_entrada_funciones"
            android:layout_margin="@dimen/margen_abajo_entrada"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_weight="1"
            android:id="@+id/et_funciones"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/bt_graficar"
            android:layout_margin="@dimen/margen_abajo_entrada"
            android:text="@string/texto_btgraficar"
            android:layout_weight="1"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/sp_historico_funciones"
            android:layout_margin="@dimen/margen_abajo_entrada"/>

    </LinearLayout>

</ScrollView>
